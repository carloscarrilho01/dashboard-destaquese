# Tipo de banco de dados: sqlite ou postgres
DATABASE_TYPE=sqlite

# Configurações PostgreSQL (usar quando DATABASE_TYPE=postgres)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=seu_usuario
POSTGRES_PASSWORD=sua_senha
POSTGRES_DATABASE=seu_banco

# Configurações Turso (SQLite na nuvem - opcional)
TURSO_DATABASE_URL=
TURSO_AUTH_TOKEN=

# Porta do servidor
PORT=3000
